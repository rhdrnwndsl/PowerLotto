<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_round"
                android:text="제000회"
                android:textColor="#007bc3"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_date"
                android:text="2020-00-00 추첨"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:gravity="center" />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_delete"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_answer"
        android:orientation="vertical"
        android:layout_marginBottom="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당첨번호"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_num1"
                android:background="@drawable/yellow_circle"
                android:textColor="#fff"
                android:text="3"
                android:gravity="center"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_num2"
                android:background="@drawable/yellow_circle"
                android:textColor="#fff"
                android:text="3"
                android:gravity="center"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_num3"
                android:background="@drawable/yellow_circle"
                android:textColor="#fff"
                android:text="3"
                android:gravity="center"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_num4"
                android:background="@drawable/yellow_circle"
                android:textColor="#fff"
                android:text="3"
                android:gravity="center"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_num5"
                android:background="@drawable/yellow_circle"
                android:textColor="#fff"
                android:text="3"
                android:gravity="center"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_num6"
                android:background="@drawable/yellow_circle"
                android:textColor="#fff"
                android:text="3"
                android:gravity="center"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="+"
                android:gravity="center"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_plus"
                android:background="@drawable/yellow_circle"
                android:textColor="#fff"
                android:text="3"
                android:gravity="center"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_price"
        android:text="당첨금 : 5,000원"
        android:layout_gravity="center"
        android:textColor="#007bc3"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />

    <include
        layout="@layout/layout_detail"
        android:id="@+id/layout_detail_a" />

    <include
        layout="@layout/layout_detail"
        android:id="@+id/layout_detail_b" />

    <include
        layout="@layout/layout_detail"
        android:id="@+id/layout_detail_c" />

    <include
        layout="@layout/layout_detail"
        android:id="@+id/layout_detail_d" />

    <include
        layout="@layout/layout_detail"
        android:id="@+id/layout_detail_e" />

</LinearLayout>
